<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorP">

    <TextView
        android:id="@+id/textView"
        android:layout_width="208dp"
        android:layout_height="26dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="64dp"
        android:text="@string/google_culture_and_art"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toStartOf="@+id/Search"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/Menu"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Compass"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/compas"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.340"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <Button
        android:id="@+id/Camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/camera"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="608dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.950"
        style="?android:attr/borderlessButtonStyle" />

    <Button
        android:id="@+id/Label"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/label"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.650"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <Button
        android:id="@+id/Account"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/profile"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.947"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <Button
        android:id="@+id/Home"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/homeicon"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.040"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <Button
        android:id="@+id/Search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/search"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <Button
        android:id="@+id/Menu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/menu"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="324dp"
        android:layout_height="530dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/NewRomeIV"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:src="@drawable/angel" />

            <TextView
                android:id="@+id/NewRome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NewRome"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SaintAngel"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:text="@string/_1823" />

            <ImageView
                android:id="@+id/vangogh"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:src="@drawable/vangogh" />

            <TextView
                android:id="@+id/StarNight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Звездная ночь"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/NightDescr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Что интересно, известная картина, которая сейчас находится в Нью-Йоркском Музее современных искусств – не первая попытка Ван Гога написать небо ночью. Будучи в Арле, он создал «Звездную ночь над Роной», но она была совсем не такой, как хотел автор. А желал художник сказочности, ирреальности и удивительного мира. В письмах своему брату он называет стремление написать звезды и ночное небо нехваткой религии, рассказывает о том, что замысел полотна родился у него давно: кипарисы, звезды на небе и, может быть, поле спелой пшеницы." />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>